<% layout("/layout/boilerplate") %>
<div class="row mt-3 login-page">
  <h1 class="heading col-10 col-md-6 offset-md-3">Login</h1>
  <div class="col-10 col-md-6 offset-md-3">
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3 inputs">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          placeholder="Enter your username"
          required
        />
      </div>
      <div class="mb-3 inputs">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          placeholder="Enter your password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <div class="submit">
        <button class="btn btn-dark mb-3 add-btn">Login</button>
      </div>
    </form>
  </div>
</div>
